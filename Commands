# Update packages
sudo pacman -Syu
yay -Syu

# Check for orphans and remove if desired
pacman -Qtdq
yay -Yc

# Check integrity
sudo pacman -Qk | grep -v '0 missing files'

# Clean cache (safest)
sudo paccache -rk1 -rk0 for max(could brick)
yay -Sc

# Journals & logs
journalctl -p 3 -xb
systemctl --failed
sudo journalctl --vacuum-size=200M

# Temporary files
sudo rm -rf ~/.cache/*
sudo rm -rf /var/log/*.old
sudo rm -rf /tmp/*
sudo rm -rf /var/tmp/*

# Refresh font cache
fc-cache -r
